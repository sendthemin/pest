<%= simple_form_for(@combo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.collection_select :pest_id, Pest.all, :id, :pest_name %>
    <%= f.collection_select :pesticide_id, Pesticide.all, :id, :pesticide_name %>
    <%= f.collection_select :application_id, Application.all, :id, :application_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
