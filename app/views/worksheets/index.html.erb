<h1>Listing worksheets</h1>

<table>
  <tr>
    <th>Area</th>
    <th>Pest comment</th>
    <th>Sanitation comment</th>
    <th>Pestcontrol comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @worksheets.each do |worksheet| %>
  <tr>
    <td><%= worksheet.area %></td>
    <td><%= worksheet.pest_comment %></td>
    <td><%= worksheet.sanitation_comment %></td>
    <td><%= worksheet.pestcontrol_comment %></td>
    <td><%= link_to 'Show', worksheet %></td>
    <td><%= link_to 'Edit', edit_worksheet_path(worksheet) %></td>
    <td><%= link_to 'Destroy', worksheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

