<%= simple_form_for(@area) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :area_name %>
    <%= f.input :location_id, :as => :hidden, :input_html => { :value => @location.id }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
