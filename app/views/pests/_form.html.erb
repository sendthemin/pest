<%= simple_form_for(@pest) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :common_name %>
    <%= f.input :scientific_name %>
    <%= f.input :invertebrate %>
    <%= f.input :family %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
