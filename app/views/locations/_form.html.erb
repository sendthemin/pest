<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location_name %>
    <%= f.input :location_address %>
    <%= f.input :location_contact %>
    <%= f.input :location_phone %>
    <%= f.input :location_email %>
    <%= f.input :client_id, :as => :hidden, :collection => Client.all.collect {|c| [c.clientname, c.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
