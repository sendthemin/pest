<h1>Pesticides</h1>

<table  class="table table-bordered table-striped">
  <tr>
    <th>Common Name</th>
    <th>Scientific Name</th>
    <th>Active Ingredient</th>
    <th>Formulation</th>
    <th>EPA Registration</th>
    <th>Signal</th>
    <th>Restricted Use</th>
    <th>Label URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pesticides.each do |pesticide| %>
  <tr>
    <td><%= pesticide.common_name %></td>
    <td><%= pesticide.scientific_name %></td>
    <td><%= pesticide.active_ingredient %></td>
    <td><%= pesticide.formulation %></td>
    <td><%= pesticide.epa_registration %></td>
    <td><%= pesticide.signal %></td>
    <td><%= pesticide.restricted_use %></td>
    <td><%= pesticide.label_url %></td>
    <td><%= link_to 'Show', pesticide %></td>
    <td><%= link_to 'Edit', edit_pesticide_path(pesticide) %></td>
    <td><%= link_to 'Destroy', pesticide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

